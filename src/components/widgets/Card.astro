<style>
    /* Floating card styles */
.floating-card {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Clase para ocultar */
.hidden {
    display: none;
}

@keyframes scaleIn {
    from {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.5);
    }
    to {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }
}

.scale-in {
    animation: scaleIn 0.5s ease forwards;
}




</style>

<script>
 const floatingCard = document.getElementById('floating-card');
const closeButton = document.getElementById('close-btn');

// Función para mostrar la tarjeta
function showCard() {
    floatingCard.classList.remove('hidden');
}

// Función para cerrar la tarjeta
closeButton.addEventListener('click', () => {
    floatingCard.classList.add('hidden');
    // Después de cerrarla, espera 3 segundos y vuelve a mostrarla
    setTimeout(showCard, 60000); // 3000 ms = 3 segundos
});

// Llama a la función para mostrar la tarjeta inicialmente
showCard();
</script>
